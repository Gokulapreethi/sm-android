<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="fill_parent"
    android:layout_height="54dp"
    android:background="@color/title"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:weightSum="3" >

    <LinearLayout
        android:id="@+id/settingslay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/title"
            android:src="@drawable/settings_icon"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/settingslay"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_addcontact"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/key_add"
            android:src="@drawable/home"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/note_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:duplicateParentState="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/notes_f"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/note_date"
        android:background="@drawable/one"
        android:visibility="gone" />

    <Button
        android:id="@+id/im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/trash"
        android:background="@drawable/small_blue_balloon"
        android:visibility="gone" />

    <Button
        android:id="@+id/trash"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@+id/complay"
        android:src="@drawable/small_blue_balloon"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/complay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@color/title"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="3dp"
            android:background="@color/title"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btncomp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/title"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>