<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/forms_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_bordercolor_clone_border"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/datemenu_container"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="#13ABE1" >

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="3dp"
                android:text="@string/april_22_2014"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/common_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/patch_view"
                android:background="@drawable/ic_action_overflow"
                android:visibility="gone" />

            <Button
                android:id="@+id/patch_view"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toLeftOf="@+id/tv_edit"
                android:background="@drawable/patch"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:textStyle="bold"
                android:visibility="gone" >
            </Button>

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:text="@string/delete"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toLeftOf="@+id/tv_delete"
                android:text="@string/save_ut"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="visible" />
        </RelativeLayout>

        <View
            android:id="@+id/utility_divider1"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#B6B6B4" />

        <TextView
            android:id="@+id/tv_buyername"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
            android:gravity="left"
            android:singleLine="false"
            android:text="@string/buyer_name"
            android:textColor="#736F6E"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_username"
            android:layout_width="fill_parent"
            android:layout_height="37dp"
            android:layout_margin="7dp"
            android:background="@drawable/rounded_bordercolor_clone_border"
            android:hint="@string/name_organization"
            android:paddingLeft="5dp"
            android:scrollbarStyle="insideOverlay"
            android:singleLine="false"
            android:textSize="15dp" >
        </EditText>

        <TextView
            android:id="@+id/tv_prdctname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
            android:gravity="left"
            android:text="@string/product_name"
            android:textColor="#736F6E"
            android:textSize="15dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/linearsLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/ed_prdctname"
                android:layout_width="fill_parent"
                android:layout_height="37dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="7dp"
                android:layout_toLeftOf="@+id/iv_photo"
                android:background="@drawable/rounded_bordercolor_clone_border"
                android:hint="@string/product_name"
                android:paddingLeft="5dp"
                android:scrollbarStyle="insideOverlay"
                android:singleLine="false"
                android:textSize="15dp" >
            </EditText>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/forms_qty_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="5dp"
                android:gravity="left"
                android:text="@string/quantity"
                android:textColor="#736F6E"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_quantity"
                android:layout_width="200dp"
                android:layout_height="37dp"
                android:layout_margin="7dp"
                android:background="@drawable/rounded_bordercolor_clone_border"
                android:hint="@string/number_of_quantity"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:scrollbarStyle="insideOverlay"
                android:singleLine="false"
                android:textSize="15dp" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forms_container_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_prdctprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="5dp"
                android:gravity="left"
                android:text="@string/price"
                android:textColor="#736F6E"
                android:textSize="15dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/linearsLayout1_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/ed_prdctprice"
                    android:layout_width="200dp"
                    android:layout_height="37dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/rounded_bordercolor_clone_border"
                    android:hint="@string/product_price"
                    android:inputType="numberDecimal"
                    android:paddingLeft="5dp"
                    android:scrollbarStyle="insideOverlay"
                    android:singleLine="false"
                    android:textSize="15dp" >
                </EditText>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mediacontainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/forms_photocontainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_addimages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="5dp"
                    android:gravity="left"
                    android:text="@string/add_your_product_images"
                    android:textColor="#736F6E"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/forms_photocontainer1"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/rel_ph1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/lay_rectangle" >

                        <ImageView
                            android:id="@+id/iv_photo1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/ic_action_camera_low" />

                        <ImageView
                            android:id="@+id/iv_close1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/close"
                            android:visibility="gone" >
                        </ImageView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_ph2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/lay_rectangle"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/iv_photo2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/ic_action_camera_low" />

                        <ImageView
                            android:id="@+id/iv_close2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/close" >
                        </ImageView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_ph3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/lay_rectangle"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/iv_photo3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/ic_action_camera_low" />

                        <ImageView
                            android:id="@+id/iv_close3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/close" >
                        </ImageView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_ph4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/lay_rectangle"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/iv_photo4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/ic_action_camera_low" />

                        <ImageView
                            android:id="@+id/iv_close4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/close" >
                        </ImageView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_ph5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/lay_rectangle"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/iv_photo5"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/ic_action_camera_low" />

                        <ImageView
                            android:id="@+id/iv_close5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/close" >
                        </ImageView>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/forms_otherscontainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_addotherinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="5dp"
                    android:gravity="left"
                    android:text="@string/add_more_information_about_your_product"
                    android:textColor="#736F6E"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/forms_otherinfo"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/rel_audio"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/lay_rectangle"
                        android:visibility="visible" >

                        <ImageView
                            android:id="@+id/iv_audio"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/ic_action_mic_grey" />

                        <ImageView
                            android:id="@+id/iv_micclose"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/close"
                            android:visibility="gone" >
                        </ImageView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_video"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/lay_rectangle"
                        android:visibility="visible" >

                        <ImageView
                            android:id="@+id/iv_video"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/ic_action_video_low" />

                        <ImageView
                            android:id="@+id/iv_videoclose"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/close"
                            android:visibility="gone" >
                        </ImageView>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rel_gps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tv_gps"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:gravity="left"
                android:singleLine="false"
                android:text="@string/location"
                android:textColor="#736F6E"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_gps"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_gps"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/gps_icon" />

            <EditText
                android:id="@+id/ed_gps"
                android:layout_width="fill_parent"
                android:layout_height="37dp"
                android:layout_below="@+id/tv_gps"
                android:layout_margin="7dp"
                android:layout_toRightOf="@+id/iv_gps"
                android:background="@drawable/rounded_bordercolor_clone_border"
                android:hint="@string/location"
                android:paddingLeft="5dp"
                android:scrollbarStyle="insideOverlay"
                android:singleLine="false"
                android:textSize="15dp" >
            </EditText>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
            android:gravity="left"
            android:singleLine="false"
            android:text="@string/address"
            android:textColor="#736F6E"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_address"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="7dp"
            android:background="@drawable/rounded_bordercolor_clone_border"
            android:hint="@string/address"
            android:paddingLeft="5dp"
            android:scrollbarStyle="insideOverlay"
            android:singleLine="false"
            android:textSize="15dp" >
        </EditText>

        <LinearLayout
            android:id="@+id/llay_cntrycontainer1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:scrollbars="horizontal" >

            <LinearLayout
                android:id="@+id/llay_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:scrollbars="horizontal" >

                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:gravity="left"
                    android:singleLine="false"
                    android:text="@string/countrytv"
                    android:textColor="#736F6E"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/rel_contry"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/ed_country"
                        android:layout_width="fill_parent"
                        android:layout_height="37dp"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="7dp"
                        android:layout_toLeftOf="@+id/iv_country"
                        android:background="@drawable/rounded_bordercolor_clone_border"
                        android:hint="@string/country"
                        android:paddingLeft="5dp"
                        android:scrollbarStyle="insideOverlay"
                        android:singleLine="false"
                        android:textSize="15dp" >
                    </EditText>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llay_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:scrollbars="horizontal" >

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:gravity="left"
                    android:singleLine="false"
                    android:text="@string/state"
                    android:textColor="#736F6E"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/rel_contry_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" >

                    <EditText
                        android:id="@+id/ed_state"
                        android:layout_width="fill_parent"
                        android:layout_height="37dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="7dp"
                        android:layout_toLeftOf="@+id/iv_state"
                        android:background="@drawable/rounded_bordercolor_clone_border"
                        android:hint="@string/state"
                        android:paddingLeft="5dp"
                        android:scrollbarStyle="insideOverlay"
                        android:singleLine="false"
                        android:textSize="15dp" >
                    </EditText>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llay_citycontainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:scrollbars="horizontal" >

            <LinearLayout
                android:id="@+id/llay_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:scrollbars="horizontal" >

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:gravity="left"
                    android:singleLine="false"
                    android:text="@string/city_district"
                    android:textColor="#736F6E"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/rel_city"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/ed_city"
                        android:layout_width="fill_parent"
                        android:layout_height="37dp"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="7dp"
                        android:layout_toLeftOf="@+id/iv_city"
                        android:background="@drawable/rounded_bordercolor_clone_border"
                        android:hint="@string/city_district"
                        android:paddingLeft="5dp"
                        android:scrollbarStyle="insideOverlay"
                        android:singleLine="false"
                        android:textSize="15dp" >
                    </EditText>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llay_zip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:scrollbars="horizontal" >

                <TextView
                    android:id="@+id/tv_zip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:gravity="left"
                    android:singleLine="false"
                    android:text="@string/pin"
                    android:textColor="#736F6E"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ed_pin"
                    android:layout_width="fill_parent"
                    android:layout_height="37dp"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="7dp"
                    android:layout_toLeftOf="@+id/iv_pin"
                    android:background="@drawable/rounded_bordercolor_clone_border"
                    android:hint="@string/pin"
                    android:inputType="number"
                    android:maxLength="8"
                    android:paddingLeft="5dp"
                    android:scrollbarStyle="insideOverlay"
                    android:singleLine="false"
                    android:textSize="15dp" >
                </EditText>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llay_contactcontainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:scrollbars="horizontal" >

            <LinearLayout
                android:id="@+id/llay_mail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:scrollbars="horizontal" >

                <TextView
                    android:id="@+id/tv_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:gravity="left"
                    android:singleLine="false"
                    android:text="@string/email"
                    android:textColor="#736F6E"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ed_mail"
                    android:layout_width="fill_parent"
                    android:layout_height="37dp"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="7dp"
                    android:layout_toLeftOf="@+id/iv_city"
                    android:background="@drawable/rounded_bordercolor_clone_border"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5dp"
                    android:scrollbarStyle="insideOverlay"
                    android:singleLine="false"
                    android:textSize="15dp" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llay_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:scrollbars="horizontal" >

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:gravity="left"
                    android:singleLine="false"
                    android:text="@string/contact_number_small"
                    android:textColor="#736F6E"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/rel_contact"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/ed_code"
                        android:layout_width="50dp"
                        android:layout_height="37dp"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="7dp"
                        android:background="@drawable/rounded_bordercolor_clone_border"
                        android:hint="@string/code"
                        android:inputType="number"
                        android:paddingLeft="5dp"
                        android:maxLength="5"
                        android:scrollbarStyle="insideOverlay"
                        android:singleLine="false"
                        android:textSize="15dp" >
                    </EditText>

                    <EditText
                        android:id="@+id/ed_number"
                        android:layout_width="fill_parent"
                        android:layout_height="37dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="7dp"
                        android:layout_toRightOf="@+id/ed_code"
                        android:background="@drawable/rounded_bordercolor_clone_border"
                        android:hint="@string/number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingLeft="5dp"
                        android:scrollbarStyle="insideOverlay"
                        android:singleLine="false"
                        android:textSize="15dp" >
                    </EditText>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/footer_container"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="#13ABE1" >

            <TextView
                android:id="@+id/tv_results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="3dp"
                android:background="@drawable/textview_touch"
                android:text="@string/show_Result"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@+id/tv_results"
                android:background="@drawable/refresh"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/btn_refresh"
                android:background="@color/title"
                android:text="@string/distance"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_psthide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="7dp"
                android:text="@string/post"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llay_resultcontainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFF4"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:scrollbars="horizontal"
            android:visibility="gone" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
