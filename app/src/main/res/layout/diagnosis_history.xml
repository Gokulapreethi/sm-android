<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black2">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/blue2" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="DIAGNOSIS HISTORY"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/navigation_close"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/selectAll_container"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/header"
        android:gravity="center"
        android:background="@color/lblack">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ACTIVE"
            android:textColor="@color/snazlgray"
            android:textSize="20sp"
            android:gravity="center" />
</RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D60-D64 Aplastic and other animias and other bone marrow failure syndromes"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:layout="@+id/age"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="1dp"
    android:id="@+id/active_descrip" />
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="12 Feb 2016"
        android:id="@+id/see_all"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:layout_below="@+id/active_descrip"
        android:layout_alignRight="@+id/active_descrip"
        android:layout_alignEnd="@+id/active_descrip"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@color/lblack"
        android:layout_below="@+id/see_all"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="PREVIOUS"
            android:textColor="@color/snazlgray"
            android:textSize="20sp"
            android:gravity="center" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D60-D64 Aplastic and other animias and other bone marrow failure syndromes"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:layout="@+id/age"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="1dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAKE ACTIVE"
            android:textColor="@color/blue2"
            android:layout="@+id/age"
            android:layout_marginLeft="30dp"
            android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        android:text="12 Feb 2016"
        android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D60-D64 Aplastic and other animias and other bone marrow failure syndromes"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:layout="@+id/age"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAKE ACTIVE"
            android:textColor="@color/blue2"
            android:layout="@+id/age"
            android:layout_marginLeft="30dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width = "wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:text="12 Feb 2016"
            />
    </RelativeLayout>
</LinearLayout>