<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlay_tilte"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="@color/title"
        android:orientation="horizontal"
        android:weightSum="4"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_Settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:background="@drawable/icon_sidemenu" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="2.75"
            android:gravity="center"
            android:text="@string/my_apps"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/appnotificarion"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/heading"
            android:layout_weight=".25"
            android:background="@drawable/one"
            android:visibility="gone" />

        <Button
            android:id="@+id/appsim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/appnotificarion"
            android:layout_weight=".25"
            android:background="@drawable/small_blue_balloon"
            android:visibility="gone" />

        <Button
            android:id="@+id/form_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/appnew"
            android:background="@drawable/ic_action_settings" />

        <Button
            android:id="@+id/appnew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:background="@drawable/toolbar_buttons_plus" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_maincontainers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2" 
        android:visibility="visible">

        <Button
            android:id="@+id/appsviewbtn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/rounded_bordercolor_app"
            android:text="@string/apps_av"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/quickbtn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/rounded_bordercolor_app2"
            android:text="@string/quick_actions_av"
            android:textColor="@color/title"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/level"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/qa_icon"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/gridshare" />

        <TextView
            android:id="@+id/iview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/your_app_list_is_empty"
            android:textColor="#737373" >
        </TextView>

        <Button
            android:id="@+id/addanapp"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="#13ADE1"
            android:text="@string/add_a_new_app"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- <ScrollView android:layout_width="fill_parent" -->
    <!-- android:layout_height="fill_parent"> -->

    <LinearLayout
        android:id="@+id/layout_maincontainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:weightSum="2" >

        <LinearLayout
            android:id="@+id/layout_maincontainer1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.40"
            android:orientation="vertical"
            android:scrollbars="vertical" >

            <LinearLayout
                android:id="@+id/levelQA"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="15dp"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/qa_icon1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/apps" />

                <TextView
                    android:id="@+id/iview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="@string/your_quick_action_list_is_empty"
                    android:textColor="#737373" >
                </TextView>

                <Button
                    android:id="@+id/addanapp1"
                    android:layout_width="210dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="#13ADE1"
                    android:text="@string/add_a_new_qa"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.cg.stickygridheaders.StickyGridHeadersGridView
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/gridView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clipToPadding="false"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center"
                android:numColumns="3"
                android:overScrollMode="always"
                android:stretchMode="columnWidth" />

<!--             <com.cg.stickygridheaders.StickyGridHeadersGridView -->
<!--                 xmlns:android="http://schemas.android.com/apk/res/android" -->
<!--                 xmlns:tools="http://schemas.android.com/tools" -->
<!--                 android:id="@+id/gridView1" -->
<!--                 android:layout_width="fill_parent" -->
<!--                 android:layout_height="fill_parent" -->
<!--                 android:clipToPadding="false" -->
<!--                 android:descendantFocusability="blocksDescendants" -->
<!--                 android:numColumns="2" -->
<!--                 android:padding="16dp" -->
<!--                 android:stretchMode="columnWidth" /> -->

<!--             <GridView -->
<!--                 android:id="@+id/gridView1" -->
<!--                 android:layout_width="fill_parent" -->
<!--                 android:layout_height="fill_parent" -->
<!--                 android:descendantFocusability="blocksDescendants" -->
<!--                 android:gravity="center" -->
<!--                 android:numColumns="3" -->
<!--                 android:overScrollMode="never" -->
<!--                 android:stretchMode="columnWidth" > -->
<!--             </GridView> -->

            <GridView
                android:id="@+id/gridViewQA"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center"
                android:numColumns="2"
                android:overScrollMode="never"
                android:stretchMode="columnWidth"
                android:visibility="gone" >
            </GridView>
        </LinearLayout>
    </LinearLayout>

    <!-- </ScrollView> -->

</LinearLayout>