<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/sender_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/buddyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:weightSum="2" >

            <EditText
                android:id="@+id/buddyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.95"
                android:editable="false" />

            <Button
                android:id="@+id/select_buddy"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_weight=".05"
                android:background="@drawable/icon_detail" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buddyContainer"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2" >

            <Button
                android:id="@+id/start_share"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/title"
                android:text="@string/start_share"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/stop_share"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/start_share"
                android:layout_weight="1"
                android:background="@color/title"
                android:text="@string/stop_share"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/secondary_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sender_container"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="3" >

        <Button
            android:id="@+id/image_1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/title"
            android:text="@string/image_1"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/image_2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/title"
            android:text="@string/image_2"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/video_1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/title"
            android:text="@string/video_1"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>