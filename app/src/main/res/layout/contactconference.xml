<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#272829"
    android:padding="10dp" >

  
        <CheckBox
            android:id="@+id/buddycheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:button="@drawable/checkbok_selector"
            android:layout_centerVertical="true"
            android:checked="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/buddy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/buddycheck"
            android:layout_centerVertical="true"
            android:text="@string/buddy"
            android:textColor="@color/white" >
        </TextView>
        
        <TextView
            android:id="@+id/tv_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:textSize="10dp"
            android:text="@string/group_owner"
            android:textColor="@color/red" >
        </TextView>

</RelativeLayout>