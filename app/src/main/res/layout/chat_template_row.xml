<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="1">
        <TextView
            android:id="@+id/tv_message"
            android:text="Templates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"/>
        <ImageView
            android:id="@+id/editview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/input_edit"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/deleteview"
            android:layout_alignStart="@+id/deleteview" />
        <ImageView
            android:id="@+id/deleteview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/input_delete"
            android:layout_above="@+id/edview"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/input_plus"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

        </LinearLayout>


</LinearLayout>