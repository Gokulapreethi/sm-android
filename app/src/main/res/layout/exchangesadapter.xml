<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/listcontainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp" >

            <Button
                android:id="@+id/count1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="2dp"
                android:background="@drawable/round_button_red"
                android:enabled="false"
                android:focusable="false"
                android:text="1"
                android:textColor="#fff"
                android:textSize="8dp" />

            <Button
                android:id="@+id/count2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/count1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/round_button_blue"
                android:enabled="false"
                android:focusable="false"
                android:text="1"
                android:textColor="#fff"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/exchangeicon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/count1"
                android:enabled="false"
                android:focusable="false"
                android:src="@drawable/group_conf" />

            <Button
                android:id="@+id/count3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/exchangeicon"
                android:background="@drawable/round_button_green"
                android:enabled="false"
                android:focusable="false"
                android:text="1"
                android:textColor="#fff"
                android:visibility="gone" />

            <Button
                android:id="@+id/count4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/count3"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/exchangeicon"
                android:background="@drawable/round_button_black"
                android:enabled="false"
                android:focusable="false"
                android:text="1"
                android:textColor="#fff"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/exchangetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/icon_container"
            android:text="@string/title"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/exchangemsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exchangetitle"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/icon_container"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12dp" />
          <ImageView
        android:id="@+id/image_arroq"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="5dp"
        android:src="@drawable/gray_arrow_right" />
    </RelativeLayout>

  

</RelativeLayout>