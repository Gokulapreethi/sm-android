<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black2">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_readdeliver"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="TODAY"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />
    <RelativeLayout
        android:id="@+id/rl_contactrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_readdeliver"


        android:background="@color/grey1">
        <org.cryse.android.controls.RoundedImageView
            android:id="@+id/userDP1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:visibility="visible"
            android:background="@drawable/userphoto"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_ctcname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="buddy name"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/userDP1"/>
        <TextView
            android:id="@+id/tv_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="date"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
