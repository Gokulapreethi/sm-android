<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000000">

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/buttton_controls"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/video_views"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <FrameLayout
                        android:id="@+id/VideoView01"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"></FrameLayout>

                    <TextView
                        android:id="@+id/onoffpreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Close"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/own_image"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp" />
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/VideoView02"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <android.opengl.GLSurfaceView
                        android:id="@+id/surfaceview02"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"></android.opengl.GLSurfaceView>

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:text=""
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/onoff2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:text="Close"
                        android:textColor="@color/red_color"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/user_image2"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <FrameLayout
                    android:id="@+id/VideoView03"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:visibility="gone">

                    <android.opengl.GLSurfaceView
                        android:id="@+id/surfaceview03"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"></android.opengl.GLSurfaceView>

                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:text=""
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/onoff3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:text="Close"
                        android:textColor="@color/red_color"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/user_image3"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <FrameLayout
                        android:id="@+id/VideoView04"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:visibility="gone">

                        <android.opengl.GLSurfaceView
                            android:id="@+id/surfaceview04"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"></android.opengl.GLSurfaceView>

                        <TextView
                            android:id="@+id/name4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:text=""
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/onoff4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|end"
                            android:text="Close"
                            android:textColor="@color/red_color"
                            android:textSize="20dp" />

                        <ImageView
                            android:id="@+id/user_image4"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp" />
                    </FrameLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@id/buttton_controls"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/add_icon_video" />

            <ImageView
                android:id="@+id/speaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/mic_video" />

            <ImageView
                android:id="@+id/loudspeaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/headphone_video" />

            <ImageView
                android:id="@+id/hang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/hang" />

            <ImageView
                android:id="@+id/switchuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/buddies_video" />

            <ImageView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/loc_pin" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>