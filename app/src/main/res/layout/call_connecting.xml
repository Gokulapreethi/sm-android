<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black2"
    android:orientation="vertical"
    android:clickable="true">
  <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >
      <Button
          android:id="@+id/minimize_btn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/minimize_back"
          android:visibility="visible" />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="10dp"
          android:layout_alignParentRight="true"
          android:id="@+id/member_lay"
          android:visibility="gone">

          <Button
              android:id="@+id/members"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp"
              android:background="@drawable/tab_members_white" />
          <TextView
              android:id="@+id/members_count"
              android:layout_toRightOf="@+id/members"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1"
              android:textColor="@color/white"
              android:layout_marginRight="10dp" />
      </LinearLayout>


        <TextView
            android:id="@+id/callscreen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:hint="Audio Call"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:visibility="gone"
            android:textStyle="bold" />

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/frame_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true">

        <org.cryse.android.controls.RoundedImageView
            android:id="@+id/profilePic1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:visibility="gone"
            android:background="@drawable/user_default" />
        <org.cryse.android.controls.RoundedImageView
            android:id="@+id/profilePic2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:background="@drawable/user_default" />
        <org.cryse.android.controls.RoundedImageView
            android:id="@+id/profilePic3"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:visibility="gone"
            android:background="@drawable/user_default" />
    </FrameLayout>

<RelativeLayout
    android:id="@+id/myrelative_layout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:gravity="center"
    android:layout_marginTop="80dp">
    <org.cryse.android.controls.RoundedImageView
        android:id="@+id/profilePic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="visible"
        android:background="@drawable/user_default"
        android:layout_alignTop="@+id/call_timer" />

    <Chronometer
        android:id="@+id/call_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chronometer"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:visibility="gone" >
    </Chronometer>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:layout_alignParentBottom="true"
         android:background="@color/white"
        android:layout_alignParentLeft="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/userinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/me"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>

<RelativeLayout
    android:id="@+id/myrelative_layout"
    android:layout_width="fill_parent"
    android:layout_height="65dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/myrelative_layout1"
    android:padding="2dp"
    android:visibility="visible" >

    <ImageView
        android:id="@+id/my_broadcast_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/icon_buddy_aoffline"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/my_broadcast_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/sipunholdblack"
        android:visibility="gone" />

    <TextView
        android:id="@+id/my_userinfo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/text_view"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:gravity="center"
        android:visibility="visible"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Status"
        android:visibility="visible"
        android:textColor="@color/blue2"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/_06_03_2012_12_06_38_pm_"
        android:textColor="#FFF"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>

  <RelativeLayout
        android:id="@+id/video_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/buttoncontrols"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/preview_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <FrameLayout
                        android:id="@+id/VideoView01"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"></FrameLayout>

                    <TextView
                        android:id="@+id/onoffpreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Close"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/own_image"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp" />
                </RelativeLayout>

                <!--<RelativeLayout-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="1">-->

                    <FrameLayout
                        android:id="@+id/buddyvideoview01"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp">

                        <android.opengl.GLSurfaceView
                            android:id="@+id/buddysurfaceview01"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"></android.opengl.GLSurfaceView>

                        <TextView
                            android:id="@+id/name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:text=""
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/onoff2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|end"
                            android:text="Close"
                            android:textColor="@color/red_color"
                            android:textSize="20dp" />

                        <ImageView
                            android:id="@+id/user_image2"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp" />
                    </FrameLayout>
                <!--</RelativeLayout>-->
                <FrameLayout
                    android:id="@+id/buddyvideoview0102"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <android.opengl.GLSurfaceView
                        android:id="@+id/buddysurfaceview0102"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"></android.opengl.GLSurfaceView>

                    <TextView
                        android:id="@+id/name23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:text=""
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/onoff23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:text="Close"
                        android:textColor="@color/red_color"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/user_image23"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_videowindowlayout"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <FrameLayout
                    android:id="@+id/buddyvideoview02"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:visibility="gone">

                    <android.opengl.GLSurfaceView
                        android:id="@+id/buddysurfaceview02"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"></android.opengl.GLSurfaceView>

                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:text=""
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/onoff3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:text="Close"
                        android:textColor="@color/red_color"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/user_image3"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <FrameLayout
                        android:id="@+id/buddyvideoview03"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:visibility="gone">

                        <android.opengl.GLSurfaceView
                            android:id="@+id/buddysurfaceview03"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"></android.opengl.GLSurfaceView>

                        <TextView
                            android:id="@+id/name4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:text=""
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/onoff4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|end"
                            android:text="Close"
                            android:textColor="@color/red_color"
                            android:textSize="20dp" />

                        <ImageView
                            android:id="@+id/user_image4"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp" />
                    </FrameLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/buttoncontrols"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/add_videousers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/add_icon" />

                <ImageView
                    android:id="@+id/speaker_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/mic" />

                <ImageView
                    android:id="@+id/loudspeaker_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/headphonee" />

                <ImageView
                    android:id="@+id/hang_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/hang" />

                <ImageView
                    android:id="@+id/promotecall_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/video_call" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
 <LinearLayout
     android:id="@+id/call_controls"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignBottom="@+id/myrelative_layout"
     android:layout_alignParentBottom="true"
     android:layout_marginRight="20dp"
     android:layout_marginTop="50dp"
     android:layout_marginBottom="30dp"
     android:gravity="center"
     android:weightSum="5" >

        <Button
            android:id="@+id/btn_emergencybuddy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/loc_pin"
            android:visibility="gone" />
     <Button
         android:id="@+id/btn_han"
         android:layout_width="70dp"
         android:layout_height="70dp"
         android:layout_alignBaseline="@+id/btn_addbuddy1"
         android:layout_alignBottom="@+id/btn_addbuddy1"
         android:layout_marginLeft="15dp"
         android:layout_weight="0.5"
         android:background="@drawable/call_reject"
         android:visibility="visible" />

        <Button
            android:id="@+id/btn_connectedbuddies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="17dp"
            android:layout_toLeftOf="@+id/btn_addbuddy1"
            android:layout_weight="1"
            android:background="@drawable/buddies"
            android:visibility="gone" />
        <Button
            android:id="@+id/loudspeaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/mic"
            android:layout_weight="0.5"
            android:background="@drawable/call_speaker"
            android:visibility="gone" />
     <Button
         android:id="@+id/mic"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_weight="0.5"
         android:background="@drawable/call_mic"
         android:visibility="gone" />
     <Button
         android:id="@+id/btn_video"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_toRightOf="@+id/btn_han"
         android:layout_weight="0.5"
         android:background="@drawable/call_video"
         android:visibility="gone" />
     <Button
         android:id="@+id/btn_addbuddy1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_toRightOf="@+id/btn_han"
         android:layout_weight="0.5"
         android:background="@drawable/call_add"
         android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
