<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#272829">



    <ScrollView
        android:id="@+id/scroll_sec"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="#fff"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:text="1"
                android:background="@drawable/round_blue" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Choose Question"
                    android:textColor="#909090"
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:popupBackground="#202021"
                    android:spinnerMode="dropdown"
                    style="@style/spinner_style"
                    android:id="@+id/question1"
                    android:layout_marginBottom="15dp"/>

            </LinearLayout>


        </LinearLayout>
            <View
                android:id="@+id/view_q1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/snazgray"
                android:layout_marginLeft="60dp"/>


            <TextView
                android:id="@+id/tv_ans1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:text="Answer"
                android:visibility="gone"
                android:textColor="#909090"
                android:layout_gravity="left"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/sec_ans1"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="25dp"
                android:maxLength="30"
                android:hint="Answer"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:inputType="textFilter"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/snazgray"
                android:layout_marginLeft="60dp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textColor="#fff"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="10dp"
                    android:text="2"
                    android:background="@drawable/round_blue" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Choose Question"
                        android:textColor="#909090"
                        android:layout_gravity="left"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="30dp"
                        />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        android:popupBackground="#202021"
                        android:spinnerMode="dropdown"
                        style="@style/spinner_style"
                        android:id="@+id/question2"
                        android:layout_marginBottom="15dp"/>

                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/snazgray"
                android:layout_marginLeft="60dp"/>
            <TextView
                android:id="@+id/tv_ans2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:text="Answer"
                android:visibility="gone"
                android:textColor="#909090"
                android:layout_gravity="left"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/sec_ans2"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:maxLength="30"
                android:hint="Answer"
                android:textColor="@color/white"
                android:inputType="textFilter"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/snazgray"
                android:layout_marginLeft="60dp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textColor="#fff"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="10dp"
                    android:text="3"
                    android:background="@drawable/round_blue" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Choose Question"
                        android:textColor="#909090"
                        android:layout_gravity="left"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="30dp"/>
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        style="@style/spinner_style"
                        android:id="@+id/question3"
                        android:popupBackground="#202021"
                        android:spinnerMode="dropdown"
                        android:layout_marginBottom="15dp"/>

                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/snazgray"
                android:layout_marginLeft="60dp"/>



            <TextView
                android:id="@+id/tv_ans3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:text="Answer"
                android:textColor="#909090"
                android:visibility="gone"
                android:layout_gravity="left"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/sec_ans3"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:textColor="@color/white"
                android:maxLength="30"
                android:hint="Answer"
                android:inputType="textFilter"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/snazgray"
                android:layout_marginLeft="60dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>