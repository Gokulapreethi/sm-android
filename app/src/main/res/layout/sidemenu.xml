<LinearLayout
    android:id="@+id/menu_side"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black3"
        android:padding="15dp">

        <org.cryse.android.controls.RoundedImageView
            android:id="@+id/user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/img_user"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:text="Large Text"/>

            <LinearLayout
                android:id="@+id/ll_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/status_back"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/checkbox_default"/>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:text="Invisible"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dash"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/tv_dash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:textColor="@color/grey3"
            android:layout_weight="1"
            android:text="DASHBOARD"
            android:drawableLeft="@drawable/menu_dashboard"
            android:drawablePadding="15dp"/>

        <TextView
            android:id="@+id/dash_count"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cont"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/tv_cont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/grey3"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="CONTACTS"
            android:drawableLeft="@drawable/menu_contacts"
            android:drawablePadding="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_files"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/tv_files"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/grey3"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="SNAZBOX FILES"
            android:drawableLeft="@drawable/menu_snazbox"
            android:drawablePadding="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_calc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_calc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/grey3"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="CALENDAR"
            android:drawableLeft="@drawable/menu_calendar"
            android:drawablePadding="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_rounding"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/tv_rounding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/grey3"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="ROUNDING"
            android:drawableLeft="@drawable/menu_rounding"
            android:drawablePadding="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_invite_users"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_invite_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/grey3"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="INVITE USERS"
            android:drawableLeft="@drawable/dashboard_invite_blue"
            android:drawablePadding="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_myacc"
            android:layout_width="match_parent"
            android:background="@color/black3"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/tv_myacc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/grey3"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="My account"
                android:drawableLeft="@drawable/menu_account"
                android:drawablePadding="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_settings"
            android:layout_width="match_parent"
            android:background="@color/black3"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/tv_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/grey3"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="Settings"
                android:drawableLeft="@drawable/menu_settings"
                android:drawablePadding="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_logout"
            android:layout_width="match_parent"
            android:background="@color/black3"
            android:layout_height="50dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/grey3"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="Logout"
                android:drawableLeft="@drawable/menu_logout"
                android:drawablePadding="15dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>