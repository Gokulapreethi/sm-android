<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/calltwo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:background="@color/title" >

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_action_back" />

                <Button
                    android:id="@+id/notification"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/btn_cancel"
                    android:background="@drawable/one"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/callnew"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/steps03" />

                <Button
                    android:id="@+id/im"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/callnew"
                    android:background="@drawable/one"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_done"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_action_save" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/calllogo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp" >

                    <TextView
                        android:id="@+id/tv_texttitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_an_audio_call"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/subtitleaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_settings"
                        android:textColor="#000000"
                        android:textSize="14dp" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2sp"
                android:background="@drawable/list_divider" />

            <LinearLayout
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/etlabel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="@string/title"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textSize="18dp" >
                </EditText>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1sp"
                    android:background="@drawable/list_divider" />

                <EditText
                    android:id="@+id/et_description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="@string/description"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textSize="18dp" >
                </EditText>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1sp"
                    android:background="@drawable/list_divider" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/fileContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#E6E7E7"
                android:padding="5dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/file"
                    android:textColor="#000000"
                    android:textSize="14dp" >
                </TextView>

                <ImageView
                    android:id="@+id/file_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/qa_sett" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ftpFileLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/ftpFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="14dp" >
                </TextView>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlay_schedule"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#E6E7E7"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/schedule"
                    android:textColor="#000000"
                    android:textSize="14dp" >
                </TextView>

                <ImageView
                    android:id="@+id/call_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/qa_sett" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/sch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp" >

                <TextView
                    android:id="@+id/scheduletask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/this_task_will_run_manually"
                    android:textColor="#000000"
                    android:textSize="14dp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/trig_lay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/llayoutnew"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#E6E7E7"
                    android:padding="7dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/trigger_setting"
                        android:textColor="#000000"
                        android:textSize="14dp" >
                    </TextView>

                    <ImageView
                        android:id="@+id/trigcall_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/qa_sett" />
                </RelativeLayout>

                <ScrollView
                    android:id="@+id/scroolingtrig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/trigger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7dp" >

                        <TextView
                            android:id="@+id/trigge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no_trigger_configured"
                            android:textColor="#000000"
                            android:textSize="14dp" >
                        </TextView>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>