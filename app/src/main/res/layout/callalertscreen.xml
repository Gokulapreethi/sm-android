<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="#fff"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/Main_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#1F2B2B"
        android:paddingBottom="20dp" >

        <TextView
            android:id="@+id/call_type"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="40dp"
            android:background="#4A5252" >
        </View>

        <org.cryse.android.controls.RoundedImageView
            android:id="@+id/profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:src="@drawable/icon_buddy_aoffline" />

        <TextView
            android:id="@+id/caller_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/profile_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#fff" />

        <LinearLayout
            android:id="@+id/call_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caller_name"
            android:layout_centerHorizontal="true"
            android:paddingBottom="15dp"
            android:weightSum="2" >

           <ImageView
                android:id="@+id/tv_decline"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/caller_name"
                android:layout_alignTop="@+id/tv_accept"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:src="@drawable/icon_incoming_decline" />

            <ImageView
                android:id="@+id/tv_accept"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/tv_decline"
                android:layout_weight="1"
                android:src="@drawable/icon_incoming_accept" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>