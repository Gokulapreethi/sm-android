<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/audio_broadcast"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/blue2"
        >
    <TextView
        android:id="@+id/audio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/broadcast"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Audio Broadcast"
        android:textSize="22dp"
        android:textColor="#FFFF"
        android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/video_broadcast"
        android:layout_below="@+id/audio_broadcast"
        android:layout_marginTop="6dp"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/blue2"
        >
    <TextView
        android:id="@+id/video"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/broadcast"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="Video Broadcast"
        android:textColor="#FFFF"
        android:textSize="22dp"
        android:textStyle="bold" />
    </RelativeLayout>
    <TextView
        android:id="@+id/cancel_tv"
        android:layout_width="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_broadcast"
        android:text="Cancel"
        android:textColor="#FFFF"
        android:layout_centerInParent="true"
        android:textSize="29dp"
        android:textStyle="bold" />
</RelativeLayout>
