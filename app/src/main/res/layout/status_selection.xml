<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/black2">

        <TextView
            android:id="@+id/temp3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHOOSE\nYOUR STATUS"
            android:textSize="17sp"
            android:layout_margin="35dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/st_online"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:text="ONLINE"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/online_icon"
            android:drawableStart="@drawable/online_icon"
            android:drawablePadding="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"/>

        <TextView
            android:id="@+id/st_busy"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:text="BUSY"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/busy_icon"
            android:drawableStart="@drawable/busy_icon"
            android:drawablePadding="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"/>

        <TextView
            android:id="@+id/st_offline"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:text="OFFLINE"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/offline_icon"
            android:drawableStart="@drawable/offline_icon"
            android:drawablePadding="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"/>

        <TextView
            android:id="@+id/st_invisible"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:text="INVISIBLE"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/invisibleicon"
            android:drawableStart="@drawable/invisibleicon"
            android:drawablePadding="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/savepswd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="OK"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:background="@color/blue2" />

</RelativeLayout>