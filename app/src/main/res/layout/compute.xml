<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/content_scro"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF" >

        <RelativeLayout
            android:id="@+id/computelayoutas"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF" >

            <LinearLayout
                android:id="@+id/computelayy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/computeRelative"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="9dp"
                    android:background="@drawable/rounded_border" >

                    <EditText
                        android:id="@+id/compfield"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/select_field"
                        android:textColor="@color/black"
                        android:focusableInTouchMode="false"
                        />

                    <Button
                        android:id="@+id/btn_dropdown"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/icon_dropdown" />

                    <Button
                        android:id="@+id/btn_addcompute"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/red"
                        android:gravity="center"
                        android:contentDescription=""
                        android:text="+"
                        android:textColor="#FFFFFF" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/computelay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/computelayy"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/addnewfield"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_margin="9dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/rounded_bordercolor"
                    android:text="@string/add_new_field"
                    android:textColor="#FFFFFF" >
                </Button>

                <Button
                    android:id="@+id/Compute"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_margin="9dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/rounded_bordercolor"
                    android:text="@string/compute"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>