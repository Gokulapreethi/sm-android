<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relay_header"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/header"
        android:gravity="center"
        android:background="@color/lblack">
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ACTIVE"
            android:textColor="@color/snazlgray"
            android:textSize="20sp"
            android:gravity="center" />
    </RelativeLayout>

    <TextView
        android:id="@+id/old_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D60-D64 Aplastic and other animias and other bone marrow failure syndromes"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:layout="@+id/text_message"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="1dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAKE ACTIVE"
            android:textColor="@color/blue2"
            android:layout="@+id/age"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/message_date"
            android:layout_width = "wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:text="12 Feb 2016"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


</LinearLayout>