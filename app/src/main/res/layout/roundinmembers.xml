<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#272829"
    android:orientation="vertical">
    <com.group.VerticalScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:id="@+id/scroll"
        android:layout_marginBottom="40dp"
        android:fillViewport="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center"
                android:background="#272829"
                android:id="@+id/rl1"
                android:visibility="visible">


                <org.cryse.android.controls.RoundedImageView
                    android:id="@+id/groupicon"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_below="@+id/tv"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/group_usericon"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/capture_image_view"
                    android:background="@drawable/icon_rounding_group"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/groupicon"
                    android:layout_alignEnd="@+id/groupicon" />

            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/groupname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R.TEAM ONE"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="22dp"/>
            <TextView
                android:id="@+id/groupDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The historic nuclear accord with Iran dropped economic sanctions"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_marginTop="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="@color/black1"
                android:layout_gravity="center"
                android:gravity="center"
                >


            <TextView
                android:id="@+id/members_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEMBERS"
                android:textColor="@color/snazash"
                android:visibility="visible"
                android:background="@color/black1"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                />
            <TextView
                android:id="@+id/members_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0)"
                android:textColor="@color/blue2"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="0dp"
                android:layout_gravity="center"
                android:background="@color/black1"

                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="right"
                android:weightSum="2"
                android:id="@+id/sort"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/role_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ROLE"
                    android:textColor="@color/snazlgray"
                    android:background="@color/black2"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/online_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@color/black2"
                    android:text="ONLINE"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/alpha_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black2"
                    android:drawableRight="@drawable/sort_arrow"
                    android:drawableEnd="@drawable/sort_arrow"
                    android:textColor="@color/snazlgray"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="A &gt; Z"/>

            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/memList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>
    </com.group.VerticalScrollview>
</RelativeLayout>