<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#272829" >

    <RelativeLayout
        android:id="@+id/selectAll_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/header"
        android:gravity="center"
        android:background="@color/lblack">

        <CheckBox
            android:id="@+id/selectAll_buddy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbok_selector"
            android:layout_centerVertical="true"
            android:text="select all"/>

        <TextView
            android:id="@+id/selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:textSize="15dp"
            android:text="0 selected"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/searchResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/selectAll_container"
        android:layout_above="@+id/RelativeLayout2"/>

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/blue2"
        android:visibility="visible"
        android:padding="5px" >

        <Button
            android:id="@+id/bt_RelativeLayout2"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/blue2"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:text="SEND INVITE"
            android:drawableRight="@drawable/navigation_check"/>

    </RelativeLayout>

</RelativeLayout>