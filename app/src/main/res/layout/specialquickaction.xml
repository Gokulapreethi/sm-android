<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:background="#D2EBF8" android:id="@+id/llayout_actionholder"
			 android:layout_width="fill_parent"
			android:layout_height="fill_parent" >
<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_margin="10dp"
          
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Form Query"  android:textColor="#000000"/>

            <EditText
                android:id="@+id/etlabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Text"
                android:inputType="textPersonName" android:layout_marginTop="5dp"
                android:maxLength="1000" />

            <TextView
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Data Insertion" />

            <CheckBox
                android:id="@+id/etcondtion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Insert Data By Executed Query"
                android:layout_marginTop="5dp"
                android:inputType="textMultiLine" />

         

           

            <!-- <EditText android:layout_width="match_parent" android:id="@+id/ettime" -->
            <!-- android:layout_height="wrap_content" android:inputType="text"   android:hint="Date &amp; Time Picker"/> -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Make Action" />

            <Spinner
                android:id="@+id/action_Spinner"
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:scaleType="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="#000000"
                android:text="Contact" />

            <EditText
                android:id="@+id/etTo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="To users" 
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/execute"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true" android:text="Execute"
                android:layout_marginTop="5dp" android:textColor="#000000"/>
           
        </LinearLayout>

		</LinearLayout>

