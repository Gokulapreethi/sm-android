<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black2">
    <TextView
        android:id="@+id/patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joe Bloggs"
        android:textColor="@color/white"
        android:layout="@+id/notes_icon"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age:"
                android:textColor="@color/snazash"
                android:layout="@+id/age"
                android:layout_weight="0.5"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:id="@id/floor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Floor: "
                android:textColor="@color/snazash"
                android:layout="@+id/Floor"
                android:layout_weight="0.5" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sex:"
                android:textColor="@color/snazash"
                android:layout="@+id/age"
                android:layout_weight="0.5"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:id="@id/ward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ward:"
                android:textColor="@color/white"
                android:layout="@+id/Floor"
                android:layout_weight="0.5" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/mrn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MRN:"
                android:textColor="@color/snazash"
                android:layout="@+id/age"
                android:layout_marginLeft="30dp"
                android:layout_weight="0.5"/>
            <TextView
                android:id="@+id/room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room :"
                android:textColor="@color/snazash"
                android:layout="@+id/Floor"
                android:layout_weight="0.5" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/los"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOS:"
                android:textColor="@color/snazash"
                android:layout="@+id/age"
                android:layout_marginLeft="30dp"
                android:layout_weight="0.5"/>
            <TextView
                android:id="@+id/bed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bed :"
                android:textColor="@color/snazash"
                android:layout="@+id/Floor"
                android:layout_weight="0.5" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital:"
            android:textColor="@color/snazlgray"
            android:layout="@+id/age"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/tv_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital "
            android:textColor="@color/snazash"
            android:layout="@+id/age"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
    <TextView
        android:id="@+id/tv_status"
        android:hint="Current Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_edit"
        android:layout_marginTop="16dp"
        android:id="@+id/edit_status"
        android:visibility="gone"
        android:layout_marginRight="25dp"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/currentstatus_lay"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:baselineAligned="true">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/currentstatus_lay1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:baselineAligned="true">

            </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/grey3" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:hint="Diagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/edit_diagnosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_edit"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:layout_marginRight="25dp"/>

            </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:id="@+id/diagnosis"
        android:text=""
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/blue2"
        android:textSize="15sp"
        android:text="SEE ALL"
        android:id="@+id/see_all"
        android:layout_marginTop="10dp"
        android:layout_gravity="right" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/grey3" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
    <TextView
        android:hint="Medications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"/>

            <Button
                android:id="@+id/edit_medications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_edit"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_marginRight="25dp"/>

        </LinearLayout>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="17dp"
    android:textColor="@color/white"
    android:id="@+id/medications"
        android:text=""
    android:layout_marginLeft="30dp"
    android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/blue2"
                android:textSize="15sp"
                android:text="SEE ALL"
                android:id="@+id/see_all1"
                android:layout_marginTop="10dp"
                android:layout_gravity="right" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/grey3" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
    <TextView
        android:hint="Tests and vitals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_edit"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_marginRight="25dp"
                android:id="@+id/edit_tests"/>
        </LinearLayout>
    <TextView
        android:id="@+id/testandvitals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center"
        android:text=""
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width = "wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/blue2"
                android:textSize="15sp"
                android:text="SEE ALL"
                android:id="@+id/see_all3"
                android:layout_marginTop="10dp"
                android:layout_gravity="right" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/grey3" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:hint="Hospital Course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_edit"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:id="@+id/edit_hospital"
                android:layout_marginRight="25dp"/>

        </LinearLayout>
            <TextView
                android:id="@+id/hospitalcourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout="@+id/notes_icon"
                android:textSize="20dp"
                android:gravity="center"
                android:text=""
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/blue2"
                android:textSize="15sp"
                android:text="SEE ALL"
                android:id="@+id/see_all4"
                android:layout_marginTop="10dp"
                android:layout_gravity="right" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/grey3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:hint="Consults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_edit"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:id="@+id/edit_consults"
                android:layout_marginRight="25dp"/>

        </LinearLayout>
            <TextView
                android:id="@+id/consults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout="@+id/notes_icon"
                android:textSize="20dp"
                android:text=""
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/blue2"
                android:textSize="15sp"
                android:text="SEE ALL"
                android:id="@+id/see_all5"
                android:layout_marginTop="10dp"
                android:layout_gravity="right" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>