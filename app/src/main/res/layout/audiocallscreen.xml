<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black2"
    android:clickable="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:visibility="gone">

        <org.cryse.android.controls.RoundedImageView
            android:id="@+id/profilePic1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:background="@drawable/user_default"
            android:visibility="gone" />

        <org.cryse.android.controls.RoundedImageView
            android:id="@+id/profilePic2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/user_default"
            android:visibility="gone" />

        <org.cryse.android.controls.RoundedImageView
            android:id="@+id/profilePic3"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="@drawable/user_default"
            android:visibility="gone" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/myrelative_layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:padding="2dp">



        <Chronometer
            android:id="@+id/call_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/chronometer"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:visibility="gone"></Chronometer>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/userinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/me"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myrelative_layout"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/myrelative_layout1"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/my_broadcast_ibtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/icon_buddy_aoffline"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/sipunholdblack"
            android:visibility="gone" />

        <TextView
            android:id="@+id/my_userinfo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/text_view"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:hint="Status"
            android:textColor="@color/blue2"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/_06_03_2012_12_06_38_pm_"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/video_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/preview_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1">

                    <FrameLayout
                        android:id="@+id/VideoView01"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"></FrameLayout>

                    <org.cryse.android.controls.RoundedImageView
                        android:id="@+id/own_image"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/own_image"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text=""
                        android:textSize="15dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/onoffpreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/call_close_video"
                        android:gravity="center"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/flipcamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/onoffpreview"
                        android:background="@drawable/call_flip_camera" />
                </RelativeLayout>

                <!--<RelativeLayout-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1">-->

                <FrameLayout
                    android:id="@+id/buddyvideoview01"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/onoff2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right|end"
                        android:background="@drawable/call_close_video"
                        android:textColor="@color/red_color"
                        android:textSize="20dp" />

                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <org.cryse.android.controls.RoundedImageView
                            android:id="@+id/user_image2"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center"
                            android:padding="10dp" />

                        <TextView
                            android:id="@+id/name2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/user_image2"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text=""
                            android:textSize="15dp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </FrameLayout>
                <!--</RelativeLayout>-->
                <FrameLayout
                    android:id="@+id/buddyvideoview0102"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:visibility="gone">



                    <TextView
                        android:id="@+id/onoff23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right|end"
                        android:background="@drawable/call_close_video"
                        android:textColor="@color/red_color"
                        android:textSize="20dp" />

                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <org.cryse.android.controls.RoundedImageView
                            android:id="@+id/user_image23"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center"
                            android:padding="10dp" />

                        <TextView
                            android:id="@+id/name23"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/user_image23"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text=""
                            android:textSize="15dp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_videowindowlayout"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="horizontal"
                android:weightSum="2">

                <FrameLayout
                    android:id="@+id/buddyvideoview02"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone">



                    <TextView
                        android:id="@+id/onoff3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:background="@drawable/call_close_video"
                        android:textColor="@color/red_color"
                        android:textSize="20dp" />

                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <org.cryse.android.controls.RoundedImageView
                            android:id="@+id/user_image3"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center"
                            android:padding="10dp" />

                        <TextView
                            android:id="@+id/name3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/user_image3"
                            android:layout_gravity="center|bottom"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textSize="15dp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <FrameLayout
                        android:id="@+id/buddyvideoview03"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">


                        <TextView
                            android:id="@+id/onoff4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:background="@drawable/call_close_video"
                            android:textColor="@color/red_color"
                            android:textSize="20dp" />

                        <RelativeLayout
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <org.cryse.android.controls.RoundedImageView
                                android:id="@+id/user_image4"
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:layout_gravity="center"
                                android:padding="10dp" />

                            <TextView
                                android:id="@+id/name4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/user_image4"
                                android:layout_gravity="center|bottom"
                                android:text=""
                                android:textSize="15dp"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </FrameLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/call_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/myrelative_layout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:weightSum="5">

        <Button
            android:id="@+id/btn_emergencybuddy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/loc_pin"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_han"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBaseline="@+id/btn_addbuddy1"
            android:layout_alignBottom="@+id/btn_addbuddy1"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.5"
            android:background="@drawable/call_reject"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_connectedbuddies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="17dp"
            android:layout_toLeftOf="@+id/btn_addbuddy1"
            android:layout_weight="1"
            android:background="@drawable/buddies"
            android:visibility="gone" />

        <Button
            android:id="@+id/loudspeaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/mic"
            android:layout_weight="0.5"
            android:background="@drawable/call_speaker"
            android:visibility="gone" />

        <Button
            android:id="@+id/mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.5"
            android:background="@drawable/call_mic"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_han"
            android:layout_weight="0.5"
            android:background="@drawable/call_video"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_addbuddy1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_han"
            android:layout_weight="0.5"
            android:background="@drawable/call_add"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/video_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone"
        android:weightSum="5">

        <ImageView
            android:id="@+id/hang_video"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/call_reject" />

        <ImageView
            android:id="@+id/loudspeaker_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/call_speaker" />


        <ImageView
            android:id="@+id/speaker_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/call_mic" />

        <ImageView
            android:id="@+id/promotecall_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/call_video_active" />

        <ImageView
            android:id="@+id/add_videousers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/call_add" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/minimize_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/minimize_back"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/member_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/tab_members_white" />

            <TextView
                android:id="@+id/members_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/members"
                android:text="1"
                android:textColor="@color/white" />
        </LinearLayout>


        <TextView
            android:id="@+id/callscreen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:hint="Audio Call"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>
