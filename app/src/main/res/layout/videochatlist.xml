<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/receiver_icon_container"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receiver_user"
        android:layout_centerInParent="true"
        android:padding="5dp"
        >
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/lay_bg_corner"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/receiver_multi_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:src="@drawable/refresh" />
            <ImageView
                android:id="@+id/im_pin"
                android:layout_below="@+id/receiver_multi_msg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/tab_snazbox_white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/im_pin"
                android:id="@+id/tv_pathname"
                android:layout_below="@+id/receiver_multi_msg"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:text="PhotoFile.jpg"
                android:textColor="@color/white"
                android:textSize="12dp"
                />
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/up_progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/customprogress_previous"
            android:indeterminateOnly="true"
            android:minHeight="50dip"
            android:minWidth="50dip"
            android:progress="0"
            android:progressDrawable="@drawable/customprogress_previous"
            android:visibility="gone" >
        </ProgressBar>

        <ProgressBar
            android:id="@+id/up_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:minHeight="50dip"
            android:minWidth="50dip"
            android:progress="0"
            android:progressDrawable="@drawable/customprogress"
            android:visibility="gone" />

        <TextView
            android:id="@+id/up_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="hoklh"
            android:textColor="@color/red"
            android:textSize="9dp"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
