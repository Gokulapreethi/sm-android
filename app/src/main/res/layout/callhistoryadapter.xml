<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relBuddyList"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
 
    <RelativeLayout
        android:id="@+id/buddy_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/buddy_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="6dip"
            android:scaleType="center"
            android:src="@drawable/callhistory_icon" />


        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/tv_buddyName"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/buddy_icon"
            android:visibility="gone" />

        <TextView
            android:id="@+id/to_calluser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_toRightOf="@+id/status_icon"
            android:text="@string/textview"            
            android:textColor="@color/black"
            android:layout_marginTop="5dp" >
        </TextView>

        <RelativeLayout
            android:id="@+id/statusLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_buddyName"
            android:layout_toRightOf="@+id/status_icon" >

            <TextView
                android:id="@+id/calltype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"              
                android:layout_marginLeft="2dip"
                android:layout_marginTop="40dp"
                android:text="call type" >
            </TextView>

            <TextView
            android:id="@+id/datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statusLayout"
            android:layout_marginLeft="2dip"           
            android:layout_toRightOf="@+id/status_icon"
            android:lines="1"
            android:singleLine="true"
            android:text="@string/date_and_time"
            android:textColor="#339999"
            android:visibility="visible"
             android:layout_marginTop="40dp" >
        </TextView>

           
        </RelativeLayout>

       

        

       
    </RelativeLayout>

    

</RelativeLayout>