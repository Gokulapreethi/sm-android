<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_addcompute"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="9dp"
    android:background="@drawable/rounded_border" >

    <EditText
        android:id="@+id/compfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp" android:focusableInTouchMode="false"
        android:layout_marginTop="10dp" 
        android:hint="@string/select_field" />

    <Button
        android:id="@+id/btn_dropdown"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/icon_dropdown" />

    <Button
        android:id="@+id/btn_addcompute"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/red"
        android:contentDescription=""
        android:gravity="center"
        android:text="+"
        android:textColor="#FFFFFF" />

</RelativeLayout>