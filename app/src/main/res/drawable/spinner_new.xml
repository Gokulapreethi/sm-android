<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item>
            <shape>
                <gradient
                    android:angle="90"
                    android:endColor="#272829"
                    android:startColor="#272829"
                    android:type="linear" />

                <stroke
                    android:width="2dp"
                    android:color="#272829" >
                </stroke>

                <corners
                    android:radius="3dp" />

                <padding
                    android:bottom="5dp"
                    android:left="5dp"
                    android:right="15dp"
                    android:top="5dp" >
                </padding>
            </shape>
        </item>
        <item >
            <bitmap
                android:gravity="right"
                android:src="@drawable/input_arrow" />
        </item>
    </layer-list></item>

</selector>