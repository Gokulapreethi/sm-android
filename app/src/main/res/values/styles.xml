<resources>
	<style name="Animations" />

	<!-- PopDownMenu -->
	<style name="Animations.PopDownMenu" />
	
	<style name="Animations.PopDownMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
	</style>
	
	<style name="Animations.PopDownMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
	</style>
	
	<style name="Animations.PopDownMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
	</style>
	
	<!-- PopUpMenu -->
	<style name="Animations.PopUpMenu" />
	
	<style name="Animations.PopUpMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
	</style>
	
	<style name="Animations.PopUpMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
	</style>
	
	<style name="Animations.PopUpMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
	</style>

   <style name="MyTheme" parent="android:Theme">
      <item name="android:panelFullBackground">@color/grey_light_bg</item>
   </style>
<!-- Newly Added -->
	
	<style name="adrenalin_pageHeader">
		<item name="android:background"> @color/login</item>
	</style>
	
	<style name="adrenalin_pageContent">
		<item name="android:background">@drawable/grad1</item>
		<item name="android:paddingLeft"> 4dp </item>
		<item name="android:paddingRight"> 4dp </item>
		<item name="android:paddingTop"> 8dp </item>
		<item name="android:paddingBottom"> 20dp </item>
	</style>

	<style name="spinner_style" >
		<item name="android:background">@drawable/spinner_new</item>
	</style>

	<style name="adrenalin_pageFooter">
		<item name="android:background"> @color/login</item>
	</style>
	
	<style name="adTextView" parent="@android:style/Widget.TextView">
		<!-- <item name="android:typeface"> serif </item> -->
	</style>
	
	
	
	<style name="textLable" parent="adTextView">
<!-- 		<item name="android:typeface"> serif </item> -->
		<item name="android:textSize"> 14sp </item>
		<item name="android:textColor"> @color/lable_textcolor</item>
<!-- 		<item name="android:textStyle"> bold </item> -->
	</style>
	
<style name="textMandatoryMark" parent="@android:style/Widget.TextView">
		<item name="android:text">*</item>
		<item name="android:textColor"> #F00 </item>
		<item name="android:textSize"> 10sp</item>
		<item name="android:paddingLeft"> 2dip </item>
	</style>

	<style name="EditTextStyle" parent="@android:style/Widget.EditText">
		<item name="android:background">@drawable/edittext_style</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">left</item>
	</style>

	 <!--Date picker-->
	<style name="FadeInPopWin">
		<item name="android:backgroundDimEnabled">true</item>
		<item name="@android:windowEnterAnimation">@anim/pop_win_content_fade_in</item>
		<item name="@android:windowExitAnimation">@anim/pop_win_content_fade_out</item>
	</style>

	<style name="Theme.Transparent" parent="android:Theme">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>

</resources>

